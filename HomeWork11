using System;

namespace HomeWork2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();

            int cutNumberThree = 3;
            int cutNumberfive = 5;
            int minNumberRandom = 0;
            int maxNumberRandom = 100;
            int sumNumber = 0;
            int number = random.Next(minNumberRandom, maxNumberRandom);
            

            for (int i = 0; i <= number; i++)
            {

                if (i % cutNumberThree == 0 || i % cutNumberfive == 0)
                {
                    sumNumber = i + sumNumber;//как ставить пустые строки если в цикле есть условный оператор, так?
                    Console.WriteLine(i);
                }
            }
            
            Console.WriteLine("Сумма равна - " + sumNumber);
        }
    }
}
