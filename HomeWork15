using System;

namespace HomeWork_12
{
    class Program
    {
        static void Main(string[] args)
        {
            string password = "123";           
            int tryCount = 3;
            string inputPassword = "";
            bool passwordWrittenRight = false;
            int minCountTry = 0;

            while (tryCount > minCountTry && passwordWrittenRight == false)
            {
                Console.Write("Введите пароль: ");
                inputPassword = Console.ReadLine();

                if (inputPassword != password)
                {
                    tryCount--;
                    Console.WriteLine("Осталось попыток: " + tryCount);
                }
                else if (inputPassword == password)
                {
                    Console.WriteLine("Вау наверное был очень сложный пароль, ПОКА!!!");
                    passwordWrittenRight = true;
                }
            }
        }
    }
}
