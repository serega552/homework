using System;

namespace HomeWork_15
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int[] numberRepeat = new int[30];
            int minCountRepeat = 0;
            int maxCountRepeat = 0;
            int number = 0;
            int rememberNumber = 0;
            int minNumber = 0;
            int maxNumber = 10;

            for(int i = 0; i < numberRepeat.Length; i++)
            {
                numberRepeat[i] = random.Next(minNumber, maxNumber);
                Console.Write(numberRepeat[i] + " ");
            }

            Console.WriteLine();

            for (int j = 0; j < numberRepeat.Length; j++)
            {
                number = numberRepeat[j];

                for (int i = 0; i < numberRepeat.Length; i++)
                {
                    if (number == numberRepeat[i])
                    {
                        minCountRepeat++;
                        if (minCountRepeat > maxCountRepeat)
                        {
                            maxCountRepeat = minCountRepeat;
                            rememberNumber = numberRepeat[i];
                        }
                    }
                }

                minCountRepeat = 0;               
            }

            Console.WriteLine("число " + rememberNumber + " имеет " + maxCountRepeat + " повторений.");
        }
    }
}
