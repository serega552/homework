using System;

namespace HomeWork_15
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] numberRepeat = { 1,1,2 };
            int minCountRepeat = 0;
            int maxCountRepeat = 0;
            int number = 0;
            int rememberNumber = 0;
            int countRepeatArray = 0;
            int minNumber = 0;
            int maxNumber = 2;
            bool IsExitProgram = true; 

            while (IsExitProgram)
            {
                number = numberRepeat[countRepeatArray];

                for (int i = 0; i < numberRepeat.Length; i++)
                {
                    if(number == numberRepeat[i])
                    {
                        minCountRepeat++;
                        if(minCountRepeat > maxCountRepeat)
                        {
                            maxCountRepeat = minCountRepeat;
                            rememberNumber = numberRepeat[i];
                        }
                    }
                }
                minCountRepeat = 0;
                if(countRepeatArray < numberRepeat.Length)
                countRepeatArray++;
                else
                    IsExitProgram = false;
            }
            Console.WriteLine("число " + rememberNumber + " имеет " + maxCountRepeat + " повторений.");
        }
    }
}
