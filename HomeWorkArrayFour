using System;

namespace HomeWork_15
{
    class Program
    {
        static void Main(string[] args)
        {
            string userInput = "";
            int sum = 0;
            bool IsExitProgram = true;
            int[] sumNumbers = new int[1];

            Console.WriteLine("Чтобы записать числа - 'число' + 'enter', чтобы сложить - 'sum', чтобы выйти из программы - 'exit'");

            while (IsExitProgram)
            {
                userInput = Console.ReadLine();

                switch (userInput)
                {
                    case "exit":
                        IsExitProgram = false;
                        break;

                    case "sum":
                        for (int i = 0; i < sumNumbers.Length; i++)
                        {
                            sum += sumNumbers[i];
                        }
                        Console.WriteLine("Сумма числел = " + sum);
                        sum = 0;
                        break;

                    default:
                        int[] dopArray = new int[sumNumbers.Length + 1];

                        for (int i = 0; i < sumNumbers.Length; i++)
                        {
                            dopArray[i] = sumNumbers[i];
                        }

                        dopArray[dopArray.Length - 1] = Convert.ToInt32(userInput);
                        sumNumbers = dopArray;
                        break;
                }
            }
        }
    }
}
