using System;
using System.Collections.Generic;

namespace HomeWorkF3
{
    class Program
    {
        static void Main(string[] args)
        {
            List<int> numbers = new List<int>();

            bool isWork = true;

            while (isWork)
            {
                string inputSum = "sum";
                string inputExit = "exit";
                string userInput;

                Console.WriteLine($"Пишите любые числа, {inputSum} - сложить, {inputExit} - Выход");
                userInput = Console.ReadLine();

                switch (userInput)
                {
                    case "sum":
                        SummationNumbers(numbers);
                        break;

                    case "exit":
                        isWork = false;
                        break;

                    default:
                        WriteDownNumbers(numbers, userInput);
                        break;
                }
            }
        }

        static void WriteDownNumbers(List<int> numbers, string userInput)
        {
            if (int.TryParse(userInput, out int inputNumber))
                numbers.Add(inputNumber);

            else
                Console.WriteLine("Некорректные данные");
        }

        static void SummationNumbers(List<int> numbers)
        {
            int sum = 0;

            for (int i = 0; i < numbers.Count; i++)
            {
                sum += numbers[i];
            }

            Console.WriteLine("Сумма: " + sum);

            numbers.Clear();
        }
    }
}
