using System;
using System.Collections.Generic;

namespace HomeWorkF3
{
    class Program
    {
        static void Main(string[] args)
        {
            List<int> numbers = new List<int>();

            string userInput = "";
            int sum = 0;
            bool isWork = true;

            while (isWork)
            {
                Console.WriteLine($"Пишите любые числа, sum - сложить, exit - Выход");
                userInput = Console.ReadLine();

                switch (userInput)
                {
                    case "sum":
                        SumNumbers(sum, numbers);
                        break;

                    case "exit":
                        ExitProgram(ref isWork);
                        break;

                    default:
                        WriteDownNumbers(numbers, userInput);
                        break;
                }
            }
        }

        static void WriteDownNumbers(List<int> numbers, string userInput )
        {
            if (int.TryParse(userInput, out int inputNumber))
                numbers.Add(Convert.ToInt32(userInput));

            else
                Console.WriteLine("Некорректные данные");
        }

        static void SumNumbers(int sum, List<int> numbers)
        {
            for (int i = 0; i < numbers.Count; i++)
            {
                sum += numbers[i];
            }

            Console.WriteLine("Сумма: " + sum);

            sum = 0;
            numbers.Clear();
        }

        static void ExitProgram(ref bool isWork)
        {
            isWork = false;
        }
