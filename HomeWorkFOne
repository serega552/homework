using System;
//доп массив, цикл по старому, за циклом присваивание инпута к темпу у него вычет из длины, старый равен темпу
namespace HomeWork_15
{
    class Program
    {
        static void Main(string[] args)
        {
            string[] initials = new string[0];
            string[] positions = new string[0];

            bool isProgramOpen = true;
            string userInput = "";

            while (isProgramOpen)
            {
                Console.WriteLine("1 - добавить досье");

                Console.WriteLine("2 - вывести все досье");

                Console.WriteLine("3 - удалить досье");

                Console.WriteLine("4 - поиск по фамилии");

                Console.WriteLine("5 - выход");

                userInput = Console.ReadLine();

                switch (userInput)
                {
                    case "1":
                        AddDossier(initials, positions);
                        break;

                    case "2":
                        ShowListDossier(initials, positions);
                        break;
                    case "3":

                        break;
                    case "4":

                        break;
                    case "5":
                        isProgramOpen = false;
                        break;
                }
            }
        }

        static void AddDossier(string[] initials, string[] positions)
        {
            int id = 0;
            bool isProgramOpen = true;

            while (isProgramOpen)
            {
                Console.WriteLine("Для выхода введите 'exit'");

                string userInput = Console.ReadLine();

                switch (userInput)
                {
                    case "exit":
                        isProgramOpen = false;
                        break;

                    default:

                        Console.WriteLine("Добавление досье");

                        Console.WriteLine($"{initials.Length + 1} ФИО: ");
                        string inputInitials = Console.ReadLine();

                        Console.WriteLine($"{positions.Length + 1} Должность: ");
                        string inputPositions = Console.ReadLine();

                        AddArrayElement(initials, inputInitials, positions, inputPositions);


                        Console.WriteLine($"{inputInitials}, успешно добавлен.");
                        break;
                }
            }
        }

        static void AddArrayElement(string[] initials, string inputInitials, string[] positions, string inputPositions)
        {
            string[] tempInitials = new string[initials.Length + 1];

            for (int i = 0; i < initials.Length; i++)
            {
                tempInitials = initials;
            }
            tempInitials[tempInitials.Length - 1] = inputInitials;
            initials = tempInitials;

            string[] tempPositions = new string[positions.Length + 1];

            for (int i = 0; i < positions.Length; i++)
            {
                tempPositions = positions;
            }
            tempPositions[tempPositions.Length - 1] = inputPositions;
            positions = tempPositions;
        }

        static void ShowListDossier(string[] initials, string[] positions)
        {
            for (int i = 0; i < initials.Length; i++)
            {
                Console.WriteLine("ФИО: " + initials[i]);
            }

            for (int i = 0; i < initials.Length; i++)
            {
                Console.WriteLine("Должность: " + positions[i]);
            }
        }
    }
}
